SELECT dbc.CommentId,dbc.Comment,dba.ReportedBy,dba.ReportedDate,dbt.DiscussionTopicId,dbt.TopicTitle FROM DiscussionBoardComments as dbc left join DiscussionBoardAbuse as dba  on dbc.CommentId=dba.CommentId left join DiscussionBoardTopic as dbt on dbc.DiscussionTopicId = dbt.DiscussionTopicId where dbc.IsValid = 0


SELECT dbc.CommentId,dbc.Comment,dba.ReportedBy,dba.ReportedDate,dbt.DiscussionTopicId,dbt.TopicTitle FROM DiscussionBoardComments as dbc left join DiscussionBoardAbuse as dba  on dbc.CommentId=dba.CommentId left join DiscussionBoardTopic as dbt on dbc.DiscussionTopicId = dbt.DiscussionTopicId where dbc.IsValid = 0





